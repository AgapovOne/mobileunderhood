extend page

block title
  title= site.title

block meta
  meta(property="description" content=site.description)

  meta(name="og:url"         content=site.site_url)
  meta(name="og:image"       content="https://i.imgur.com/GpzEJQ7.jpg?1")
  meta(name="og:title"       content=site.title)
  meta(name="og:description" content=site.description)

block headerTitle
  | jsunderhood
  small
    = " / "
    a(href="https://twitter.com/jsunderhood") Присоединяйся!

block content
  
  article.container
    each row in list
      .row
        each article in row
          div.col-md-4
            h2: a(href=article.url)= article.title
            small: time= article.date
            p.list__item-desc !{article.desc}
              
