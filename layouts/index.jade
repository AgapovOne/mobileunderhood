extend page

block title
  title= site.title

block meta
  meta(property="description" content=site.description)
  meta(name="og:url"          content=site.site_url)
  meta(name="og:image"        content="https://i.imgur.com/GpzEJQ7.jpg?1")
  meta(name="og:title"        content=site.title)
  meta(name="og:description"  content=site.description)

block headerTitle
  | jsunderhood
  small
    = " / "
    a(href="https://twitter.com/jsunderhood") Присоединяйся!

block content
  article.container
    each row in list
      .row
        each article in row
          .col-md-4
            a.row(href=article.url)
              .col-md-2
                .row.text-center
                  - var img = "/images/"+article.title+"-image.jpg";
                  div.img-circle(style="width: 48px; height: 48px; background-image: url(" + img + "); background-size: cover; margin: 0 auto;")
              .col-md-10
                //- h2.h3(style="margin: 1px 0") Вадим Макеев
                h2(style="margin: 5px 0")= "@" + article.title
                //- small= "@" + article.title
            .row
              .col-md-12
                p.list__item-desc !{article.desc}
