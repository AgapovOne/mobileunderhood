extend page

block title
  title #{title} • #{site.title}

block meta
  meta(property="description" content=descText)
    
  meta(name="og:url"         content=site.site_url + url)
  if (image)
    meta(name="og:image"     content=image)
  meta(name="og:title"       content="Архив недели #{title} в #{site.title}")
  meta(name="og:description" content=descText)

block headerTitle
  a(href="/") jsunderhood
  small= " / "
    = title

block content
  .container
    .row
      .col-md-6.col-md-offset-3
        article
          | !{content}
