extend page


block title
  title #{title}

block meta
  meta(property="description" content=desc)
    
  meta(name="og:url"         content=url)
  if (image)
    meta(name="og:image"     content=image)
  meta(name="og:title"       content=title)
  meta(name="og:description" content=desc)

block content
  
  .jumbotron
    .container
      include menu
      .page-header
        h1 jsunderhood
          small  / #{title}
        p Коллективный твиттер-аккаунт для фронтенд-разработчиков с новым автором каждую неделю
  
  .container
    .row
      .col-md-6.col-md-offset-3
        article
          | !{content}
